<!-- <%# Unit 3, Assignment 4, Building management page %> -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
        
    <%- messages() %>

    <div id="managementPageContainer">
      <div class="managementpage">
          <img src="/images/site/category_add-512.webp" class="addCategoryImage" alt="Category image showing a plus to a database table">

          <% if (accountData.account_type === 'Admin') { %>
            <p>Dear Managers, do remember to review any pendig updates from your employees</p>
            <div class="managementpage_button_contin">
            <%# Buttons %>
                <a href="/inv/pending_approval" class="button_for_link">Pending Approval</a>
                <a href="/inv/add-classification" class="button_for_link">Add New Classification</a>
                <a href="/inv/add-new-inventory" class="button_for_link">Add New Vehicle</a>  
            </div>
             
            <% } else if (accountData.account_type === 'Employee') { %>
              <p>Dear employees, please note that your submissions request will need to be approved by the management team</p>

              <div class="managementpage_button_contin">
                <a href="/inv/add-classification" class="button_for_link">Add New Classification</a>
                <a href="/inv/add-new-inventory" class="button_for_link">Add New Vehicle</a>  
            </div>

            <% } %>
        
          <h2>Manage Inventory</h2>
          <p>Choose a Classification to see those inventory items.</p>
          <%# Drop down menu %>
          <%- include('../partials/categoryselect', {classifications}) %>     <%# Select list %>
          <table id="inventoryDisplay"></table>
          <p>Click button to go back to the management portal</p>
          <button type="button" onclick="window.location.href='/account/'" class="backToMgtbtn">ðŸ”™</button>  
          <noscript>JavaScript must be enabled to use this page.</noscript>
          <script src="/js/inventory.js"></script>
        </div>


    

   









