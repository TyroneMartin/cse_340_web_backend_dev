<% if (title) { %>
  <h1 class="login_page_title"><%= title %></h1>
  <div class="flash-notice">
      <%= messages.notice %>
  </div>
  <% } else {
      res.redirect('/')
  } %>
      
  <%- messages() %>
  

  <p>All fields are required.</p>
  <form id="addInventoryForm" action="/inv/add-new-inventory" method="post">
     <fieldset class="addInventoryPageForm">
        <legend>Add a new Vehicle</legend>
        <div class="containerAddInventory">
           <label for="invClassification">Select the classification:</label>
           <select id="inv_classification" name="inv_classification" required>
              <option value="" disabled selected>Choose a classification</option>
              <option value="Custom">Custom</option>
              <option value="Sedan">Sedan</option>
              <option value="Sport">Sport</option>
              <option value="SUV">SUV</option>
              <option value="Truck">Truck</option>
           </select>
  
           <label for="inv_make"><b>Make</b></label>
           <input name="inv_make" id="invMakeIDInvenForm" type="text" pattern=".{3,}" title="Please enter at least 3 characters" placeholder="Min of 3 characters" required>
             
           <label for="inv_model"><b>Model</b></label>
           <input name="inv_model" id="invModel" type="text" pattern=".{3,}" title="Please enter at least 3 characters" placeholder="Min of 3 characters" required>
             


           <label for="inv_description"><b>Description</b></label> 
           <textarea name="inv_description" id="invDescription" rows="5" cols="100" placeholder="Enter accurate data to describe your car for it to be posted on the website, free of grammatical errors." required></textarea>
  
           <label for="inv_image"><b>Image Path</b></label>
           <input name="inv_image" id="invImage" type="text" required>
  
           <label for="inv_thumbnail"><b>Thumbnail Path</b></label>
           <input name="inv_thumbnail" id="invThumbnail" type="text" required>
  
           <label for="inv_price"><b>Price</b></label>
           <input name="inv_price" id="invPrice" type="text" pattern="[0-9]+(\.[0-9]+)?" title="Please enter numbers only" placeholder="Decimal or integer" required>

           <label for="inv_year"><b>Year</b></label>
           <input name="inv_year" id="invYear" type="number" pattern="[0-9]{4}" min="1000" max="9999" title="Please enter a 4-digit year" placeholder="4-digit year" required>
  
           <label for="inv_miles"><b>Miles</b></label>
           <input name="inv_miles" id="invMiles" type="number" pattern="[0-9]" placeholder="Digits only" required>
  
           <label for="inv_color"><b>Color</b></label>
           <input name="inv_color" id="invColor" type="text" pattern="[A-Za-z]+" title="Please enter letters only" required>
  
           <input type="submit" class="Add_to_classification_list_Button" value="Click to add Car">
        </div>
     </fieldset>
  </form>
