<% if (title) { %>
    <h1 class="accountMang_View"><%= title %></h1>
    <div class="flash-notice"><%= messages.notice %></div>
    <% } else { res.redirect("/") } %> <%- messages() %> <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

    <% if (accountData.account_type === 'Client') { %>
      <h2>Welcome <%= accountData.account_firstname %></h2>
    <% } else if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h2>Welcome <%= accountData.account_firstname %></h2>
      <h3>Inventory Management</h3>
     <p><a class="accountMangementbtn" href="/inv/">Access Inventory Management</a></p>
    <% } %>
    
   <a  class="accountMangementbtn" href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
