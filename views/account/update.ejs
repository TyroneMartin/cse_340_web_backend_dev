<% if (title) { %>
    <h1 class="accountMang_View_updatePage"><%= title %></h1>
    <div class="flash-notice"><%= messages.notice %></div>
    <% } else { res.redirect("/") } %> <%- messages() %> <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

<div class="containerForAcctMagntForm">
<section class="accountInfoUpdateSection">
  <h2>Account Update</h2>
<p>You may update your account information here</p>
  <fieldset class="accountDetailsForm">
    <legend>Account details</legend>
  
    <form action="/account/update" method="post">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" id="firstName" name="firstName" value="<%=  accountData.account_firstname %> " required>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" id="lastName" name="lastName" value="<%=  accountData.account_firstname %> " required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%=  accountData.account_email %> " required>
      </div>
      <button type="submit" class="accountUpdate-btn">Update Account</button>
      <button type="button" onclick="window.location.href='/account/'" class="cancelButton">Cancel</button>          

    </form>
  </fieldset>
</section>

<section class="passwordUpdateSection">
  <h2>Update Password</h2>
  <p>If desired, you may change your password</p>
  <fieldset class="passwordUpdateForm">
    <legend>Password Update</legend>
    <form action="/account/change-password" method="post">
      <div class="form-group">
        <label for="currentPassword">Current Password</label>
        <input type="password" class="form-control" id="currentPassword" name="currentPassword" required placeholder="Enter Current Password">
      </div>
      <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter new Password">
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm New Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Renter current Password">
      </div>
      <button type="submit" class="changePw_update-btn">Change Password</button>
      <button type="button" onclick="window.location.href='/account/'" class="cancelButton">Cancel</button>          

    </form>
  </fieldset>

</div>
</div>
  